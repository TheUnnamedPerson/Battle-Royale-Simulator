<Page
    x:Class="Hunger_Games_Simulator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hunger_Games_Simulator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" FocusVisualPrimaryBrush="{x:Null}" FocusVisualSecondaryBrush="{x:Null}" Foreground="{x:Null}">

    <Grid Background="#FF121212" FocusVisualSecondaryBrush="{x:Null}" FocusVisualPrimaryBrush="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="130" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Height="60" Text="ACME Sales Corp" Foreground="White" FontSize="48" FontFamily="Futura Md BT" Margin="10,20,0,0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />

        <TextBlock Height="30" Width="200" Text="First Name:" Foreground="White" FontSize="24" FontFamily="Futura Md BT" Margin="10,20,0,0" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" HorizontalTextAlignment="Left" VerticalAlignment="Top" />
        <RichEditBox Height="40" Width="200" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBlock Height="30" Width="200" Text="Last Name:" Foreground="White" FontSize="24" FontFamily="Futura Md BT" Margin="10,20,0,0" Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" HorizontalTextAlignment="Left" VerticalAlignment="Top" />
        <RichEditBox Height="40" Width="200" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBlock Height="30" Width="200" Text="Email:" Foreground="White" FontSize="24" FontFamily="Futura Md BT" Margin="10,20,0,0" Grid.Row="3" Grid.Column="0" Grid.RowSpan="2" HorizontalTextAlignment="Left" VerticalAlignment="Top" />
        <RichEditBox Height="40" Width="200" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" VerticalAlignment="Top" Margin="10,10,0,0" />
        <Button Content="Save" Height="30" Width="60" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="1" VerticalAlignment="Top" Margin="10,10,0,0" />



    </Grid>
</Page>

